{
	"compilerOptions": {
		"rootDir": ".",
		"target": "es6",
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "./dist",
		"removeComments": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		"allowUnreachableCode": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"types": ["jest", "node"]
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts"
	  ],
	  "exclude": [
		"node_modules",
		"dist"
	  ]
}
